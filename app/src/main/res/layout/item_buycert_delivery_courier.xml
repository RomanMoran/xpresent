<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/courierBlock"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginTop="@dimen/default_margin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorLink="@color/acq_colorButton"
                android:backgroundTint="@color/editTextUnderline"
                android:layout_margin="@dimen/margin_medium"
                android:paddingBottom="20dp"
                android:hint="Город"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:textAppearance="@style/TextAppearance.EditText" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etAdress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_medium"
                android:backgroundTint="@color/editTextUnderline"
                android:hint="Адрес"
                android:maxLength="255"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="20dp"
                android:textAppearance="@style/TextAppearance.EditText" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/etComment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/editTextUnderline"
                android:layout_margin="@dimen/margin_medium"
                android:hint="Комментарий"
                android:maxLength="255"
                android:singleLine="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:paddingBottom="20dp"
                android:textAppearance="@style/TextAppearance.EditText" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>