<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/default_margin">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <TextView
                android:id="@+id/xpresent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Сертификат Xpresent"
                android:textAppearance="@style/TextAppearance.Title"
                android:layout_centerVertical="true"
                android:layout_alignParentTop="true"
                android:textAlignment="center"
                android:layout_marginStart="@dimen/default_margin" />

            <ImageView
                android:id="@+id/certQR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/xpresent"
                android:layout_centerInParent="true"/>

            <ImageView
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/default_margin"
                android:alpha="0.25"
                android:layout_below="@id/certQR"
                android:src="@drawable/stroke_drawable"/>

            <RelativeLayout
                android:id="@+id/certLabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/line"
                android:layout_marginTop="@dimen/margin_medium">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Номер сертификата"
                    android:textAppearance="@style/TextAppearance.Card"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_margin" />

                <TextView
                    android:id="@+id/total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="Секретный код"
                    android:textAppearance="@style/TextAppearance.Card"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/certLabels"
                android:layout_marginTop="@dimen/margin_medium">

                <TextView
                    android:id="@+id/certNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="M257890"
                    android:textAppearance="@style/TextAppearance.Card.Price"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="@dimen/default_margin" />

                <TextView
                    android:id="@+id/certCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="333"
                    android:textAppearance="@style/TextAppearance.Card.Code"
                    android:layout_marginEnd="@dimen/default_margin"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </RelativeLayout>
</androidx.cardview.widget.CardView>