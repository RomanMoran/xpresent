<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    android:layout_height="148dp"
    >

    <ImageView
        android:id="@+id/categoryImg"
        android:layout_width="match_parent"
        android:layout_height="148dp"
        android:tint="#2F000000"
        app:srcCompat="@drawable/placeholder_bg"
        android:scaleType="centerCrop" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_placeholder_text"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_gravity="start|top"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/mainText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Экстремальное вождение"
        android:layout_gravity="bottom"
        android:layout_marginStart="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:textAppearance="@style/TextAppearance.Card.Title.Surface"
        />

    <ProgressBar
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:progressDrawable="@drawable/ic_preloader_white_24"
        android:layout_gravity="end|top"
        android:indeterminateDrawable="@drawable/progress_drawable"
        android:indeterminateOnly="true"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginEnd="@dimen/default_margin"
        android:visibility="gone"
        />
</androidx.cardview.widget.CardView>