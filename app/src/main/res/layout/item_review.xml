<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/review"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/default_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:id="@+id/reviewBlock"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <LinearLayout
        android:id="@+id/authorBlock"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/reviewImg"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@color/colorCardStroke"
            android:scaleType="centerCrop" />


        <TextView
            android:id="@+id/reviewGrade"
            android:layout_marginTop="@dimen/margin_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:drawableStart="@drawable/ic_star"
            android:drawablePadding="@dimen/padding_mini"
            android:textAppearance="@style/TextAppearance.Card.Mark" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/contentBlock"
        android:layout_toRightOf="@+id/authorBlock"
        android:layout_marginStart="@dimen/default_margin"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/authorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_mini"
            android:textAppearance="@style/TextAppearance.Title.Subtitle"
            />

        <TextView
            android:id="@+id/reviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.Card"
            />

        <TextView
            android:id="@+id/reviewDate"
            android:layout_marginTop="@dimen/margin_mini"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:alpha="0.5"
            android:textAppearance="@style/TextAppearance.Card.Date"
            />
    </LinearLayout>
    </RelativeLayout>
    <LinearLayout
        android:id="@+id/imagesBlock"
        android:layout_below="@+id/reviewBlock"
        android:layout_margin="@dimen/default_margin"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3" >
        <ImageView
            android:id="@+id/img1"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/img2"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/margin_medium"
            android:layout_marginRight="@dimen/margin_medium"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
        <ImageView
            android:id="@+id/img3"
            android:layout_weight="1"
            android:layout_width="100dp"
            android:layout_height="100dp"/>
    </LinearLayout>
    <ImageView
        android:layout_below="@+id/imagesBlock"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:alpha="0.5"
        android:src="@drawable/stroke_drawable"/>
</RelativeLayout>
